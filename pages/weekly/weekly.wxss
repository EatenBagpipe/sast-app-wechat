.weekly-container {
  background-color: #eee;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}

.card, .card-with-small-img, .card-with-large-img {
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 0rpx;
  box-shadow: 4rpx 4rpx 10rpx #ccc;
}

.card {
  height: 290rpx;
}

.card-with-large-img {
  height: 620rpx;
}

.card-with-small-img {
  height: 290rpx;
}

.title {
  font-size: larger;
  font-weight: bold;
  margin: 20rpx;
}

.abstract, .abstract-with-large-img, .abstract-with-small-img {
  font-size: medium;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  flex-grow: 1;
  margin: 20rpx;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  color: rgba(0, 0, 0, 0.678);
}

.abstract-with-large-img {
  -webkit-line-clamp: 2;
}

.abstract-with-small-img {
  width: 850rpx;
}

.comment {
  font-size: small;
  margin: 20rpx;
  color: DarkGray;
}

.large-img {
  margin: 20rpx;
  margin-top: 0rpx;
  margin-left: auto;
  margin-right: auto;
  width: 670rpx;
  height: 370rpx;
  border-radius: 10rpx;
}

.small-img {
  margin: 20rpx;
  margin-top: -15rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.txt-img-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.weui-btn {
  padding: 0;
  border: none;
}

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.weui-btn {
  width: 110%;
  border: 0;
  right: 0;
  bottom: 0;
  left: 0;
  top: 0;
}
